FROM alpine:3.6

RUN apk update
RUN apk add --update gcc g++ python3 py3-pip python3-dev py3-numpy py3-numpy-f2py
RUN ln -s /usr/bin/python3 /usr/bin/python && ln -s /usr/bin/pip3 /usr/bin/pip
RUN pip install --upgrade --ignore-installed pip flask bokeh requests numpy
RUN pip freeze > /tmp/requirements.txt

EXPOSE 5555